@model IEnumerable<Planer.Models.Planer>

@{
    Layout = "/Views/MasterView.cshtml";
}
 
    <h1>Список задач</h1>
    
    
    <div class="tasks_area">
        <table class="table">
            <tr>
                <th>
                    Название
                </th>
                <th>
                    Описание
                </th>
                <th>
                    Сортировка
                </th>
            </tr>
            @foreach (var task in Model)
            {
                <tr>
                    <td class="jsTitle">
                        <span>@task.Title</span>
                    </td>
                    <td class="jsDescription">
                        <span>@task.Description</span>
                    </td>
                    <td class="jsSort">
                        <span>@task.Sort</span>
                    </td>
                    <td class="buttons">
                        <span class="btn edit_bt taskEditJs" data-delete-url="/Home/Update" data-task-id="@task.Id">Изменить</span>
                        <span class="btn remove_bt taskRemoveJs" data-delete-url="/Home/Delete" data-task-id="@task.Id">Удалить</span>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="btn btn-default addTaskJs">Новая задача</div>
    <div class="row">
        <div class="form_container col-md-3 col-sm-12 col-xs-12">
            <form method="post" action="/Home/Create">
                
                            <div class="input-group">
                                <label>
                                    <div>Название </div>
                                    <input  type="text" class="form-control required" name="Title" />
                                </label>
                            </div>
                        
                            <div class="input-group">
                                <label>
                                    <div>Описание </div>
                                    <textarea maxlength="350" class="form-control " name="Description"> </textarea>  
                                </label>
                            </div>
                        
                            <div class="input-group sort">
                                <label>
                                    <div>Сортировка</div> 
                                    <input type="number" class="form-control required" name="Sort" />
                                </label>
                            </div>
                        
                            <div class="input-group">
                                <button type="submit" class="btn btn-defaul submitJs">Добавить</button>
                            </div>
                        
            </form>
        </div>
    </div>